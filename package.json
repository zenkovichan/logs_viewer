{
	"name": "homescapes-log-viewer",
	"displayName": "Homescapes Log Viewer",
	"description": "Панель VS Code для чтения и фильтрации логов Homescapes (log.txt + log.historyN.txt.zip)",
	"version": "0.0.1",
	"publisher": "local",
	"repository": {
		"type": "git",
		"url": "https://github.com/local/homescapes-log-viewer"
	},
	"engines": {
		"vscode": "^1.82.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onView:logViewer.view",
		"onCommand:logViewer.openFolder"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "logViewer.openFolder",
				"title": "Homescapes Logs: Open Log File"
			}
		],
		"menus": {
			"view/title": [
				{
					"when": "view == logViewer.view",
					"command": "logViewer.openFolder",
					"group": "navigation@1"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "logViewer",
					"title": "Log Viewer",
					"icon": "./media/icon.svg"
				}
			]
		},
		"views": {
			"logViewer": [
				{
					"id": "logViewer.view",
					"name": "Homescapes Logs",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "node esbuild.js --production",
		"esbuild": "node esbuild.js",
		"esbuild-watch": "node esbuild.js --watch"
	},
	"devDependencies": {
		"@types/node": "^18.19.76",
		"@types/vscode": "^1.82.0",
		"esbuild": "^0.25.10",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"adm-zip": "^0.5.10"
	}
}
